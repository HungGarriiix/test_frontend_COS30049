{
    "version": 2,
    "builds": [
      {
        "src": "src/*.js",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { 
        "src": "/(.*)", 
        "dest": "server.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers": {
          "Access-Control-Allow-Origin": "*" 
        }
      },
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/favicon.ico", "dest": "/favicon.ico" },
      { "src": "/robots.txt", "dest": "/robots.txt" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }